<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when the tab is pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF6200EE" /> <!-- Active (pressed) background color -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- State when the tab is selected/active -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF3700B3" /> <!-- Selected (active) background color -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Default state when the tab is inactive -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/forest_green" /> <!-- Default (inactive) background color -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
