<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#081013"
                android:endColor="#091013"
                android:angle="45" />
        </shape>
    </item>

    <!-- Shiny Overlay -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#081013"
                android:endColor="@android:color/transparent"
                android:angle="90" />
            <corners android:radius="0dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>

</layer-list>
